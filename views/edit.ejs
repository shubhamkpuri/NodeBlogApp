<% include ./partials/header.ejs %>

<div class="text-center ">
	<h2>Edit <%= blog.title %> </h2>
</div>
		<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">

	<div class="form-group p-3 border rounded">
			<div class="form-group  m-3">
	    <label for="name[title]" >Title:</label>
	   <input type="text" name="blog[title]" placeholder="title" class="form-control " value="<%= blog.title %>" required="true">
	  </div>
	  	<div class="form-group  m-3">
	    <label for="blog[image]">Blog Image:</label>
	   <input type="text" name="blog[image]" placeholder="image" class="form-control " value="<%= blog.image %>">
	  </div>
	  	<div class="form-group  m-3">
	    <label for="blog[body]">Blog Content:</label>
	  <textarea name="blog[body]" placeholder="blog post"  rows="7" class="form-control"  ><%= blog.body %></textarea>
			
	  </div>
			
		<input type="submit" name="submit" class="btn btn-success btn-lg ml-3">
	</div>
	
	</form>

<% include ./partials/footer.ejs %>